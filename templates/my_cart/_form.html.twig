<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-10 space-y-8">
        
        <div class="text-center">
            <h1 class="text-3xl font-extrabold text-gray-900">
                Create New User Order
            </h1>
            <p class="mt-2 text-sm text-gray-500">
                Fill in the details below to place your order
            </p>
        </div>

        {{ form_start(form, { attr: { class: "space-y-6" } }) }}

            {% for field in form %}
                <div class="space-y-1">
                    {{ form_label(field, null, {
                        label_attr: { class: "block text-sm font-medium text-gray-700" }
                    }) }}

                    {{ form_widget(field, {
                        attr: { class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-[#129CDD] focus:ring-[#129CDD] px-4 py-2" }
                    }) }}

                    {% if form_errors(field) %}
                        <p class="text-sm text-red-600 mt-1">
                            {{ form_errors(field) }}
                        </p>
                    {% endif %}
                </div>
            {% endfor %}

            {# Button group (Back + Save) #}
            <div class="flex justify-between items-center pt-6">
                <a href="{{ path('app_my_cart_index') }}"
                   class="bg-[#FBA503] text-black px-6 py-3 rounded-lg font-bold 
                           hover:bg-[#129CDD] hover:text-white 
                           transition-colors duration-300 shadow-md"
                    >
                    ‚Üê Back to list
                </a>

                <button 
                    type="submit"
                    class="bg-[#FBA503] text-black px-6 py-3 rounded-lg font-bold 
                           hover:bg-[#129CDD] hover:text-white 
                           transition-colors duration-300 shadow-md"
                >
                    {{ button_label|default('Save') }}
                </button>
            </div>

        {{ form_end(form) }}
    </div>
</div>
