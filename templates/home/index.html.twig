{% extends 'base.html.twig' %}

{% block title %}Filument Foundry{% endblock %}

{% block body %}

  <!-- Hero Section -->
  <section class="bg-[#f5ede5] py-20">
    <div class="max-w-7xl mx-auto px-4 grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Text -->
      <div class="space-y-6">
        <h1 class="text-5xl lg:text-6xl font-extrabold text-gray-900 leading-tight">
          Turning digital dreams into physical reality
        </h1>
        <p class="text-lg text-gray-700 max-w-xl">
          Professional 3D printing services for artists, engineers, students, and innovators.
          From prototypes to final products, we bring your ideas to life with precision and quality.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 pt-2">
          <button class="bg-[rgb(18,156,221)] hover:bg-[rgb(41,176,240)] 
            text-white px-5 py-3 rounded-md font-medium 
            flex items-center gap-2 transition-colors">
            <img src="{{ asset('images/hero section/Upload White.svg') }}" alt="Upload Icon" class="w-4 h-4">
            Upload & Print Now
          </button>

          <button class="border border-gray-400 px-5 py-3 rounded-md font-medium flex items-center gap-2 text-black
            hover:bg-[rgb(251,165,3)] transition-colors">
              <img src="{{ asset('images/hero section/Play.svg') }}" alt="Play Icon" class="w-4 h-4">
              See How It Works
          </button>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-8 pt-8 border-t border-gray-300 max-w-md">
          <div>
            <div class="text-2xl font-bold text-[rgb(18,156,221)]">10K+</div>
              <p class="text-sm text-gray-600">Projects Printed</p>
            </div>
            <div>
              <div class="text-2xl font-bold text-[rgb(18,156,221)]">48h</div>
              <p class="text-sm text-gray-600">Average Delivery</p>
            </div>
            <div>
              <div class="text-2xl font-bold text-[rgb(18,156,221)]">15+</div>
              <p class="text-sm text-gray-600">Material Options</p>
            </div>
          </div>
        </div>

      <!-- Right Image -->
      <div class="relative">
        <img
          src="{{ asset('images/hero section/Hero Page.jfif') }}"
          alt="3D printer"
          class="rounded-2xl shadow-2xl object-cover w-full h-[480px]"
        />
        <span class="absolute top-4 right-4 bg-[rgb(251,165,3)] text-black text-sm font-semibold px-4 py-1.5 rounded-md shadow-md">
          Premium Quality
        </span>
        <span class="absolute bottom-4 left-4 bg-[rgb(18,156,221)] text-white text-sm font-semibold px-4 py-1.5 rounded-md shadow-md">
          Fast Turnaround
        </span>
      </div>
    </div>
  </section>
  
{% endblock %}
