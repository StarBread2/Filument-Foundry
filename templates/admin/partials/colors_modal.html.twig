<!-- ADD COLOR MODAL -->
<div 
    id="modal_addColors" 
    class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50 hidden"
>
    <!-- Modal Box -->
    <div class="bg-[#fdf5ef] rounded-xl shadow-lg p-6 w-full max-w-md relative">
        <!-- Close Button -->
        <button 
            id="closeColorsModalBtn" 
            class="absolute top-3 right-3 text-gray-500 hover:text-gray-800 text-xl font-bold">
            &times;
        </button>

        <h2 class="text-xl font-semibold mb-1">Add New Colors</h2>
        <p class="text-sm text-gray-600 mb-4">Add finishing details</p>

        <form method="POST" action="{{ path('admin_add_colors') }}" enctype="multipart/form-data" class="space-y-4">
            <!-- Hidden field to store which option user chose -->
            <input type="hidden" name="appearance_type" id="appearanceType" value="">

            <!-- Name -->
            <div>
                <label class="block text-sm font-medium mb-1">Color Name *</label>
                <input name="colors_name" type="text" required placeholder="e.g., Solid White"
                    class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-orange-400 focus:outline-none">
            </div>

            <!-- Price -->
            <div>
                <label class="block text-sm font-medium mb-1">Price (â‚±) *</label>
                <input name="price" type="number" required min="0" step="any" placeholder="e.g., 200"
                    class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-orange-400 focus:outline-none">
            </div>

            <!-- Color or Image Selection -->
            <div>
                <label class="block text-sm font-medium mb-2">Color Appearance *</label>

                <div class="flex gap-3 mb-3">
                    <button type="button" id="selectHexOption"
                        class="appearance-option px-3 py-2 rounded-md border border-gray-300 text-sm font-medium bg-white hover:bg-gray-100">
                        Choose Hex Color
                    </button>
                    <button type="button" id="selectImageOption"
                        class="appearance-option px-3 py-2 rounded-md border border-gray-300 text-sm font-medium bg-white hover:bg-gray-100">
                        Upload Image
                    </button>
                </div>

                <!-- HEX COLOR PICKER -->
                <div id="hexPickerContainer" class="hidden">
                    <input type="color" name="color_hex" id="colorHex"
                        class="w-full h-12 cursor-pointer border border-gray-300 rounded-md">
                </div>

                <!-- IMAGE UPLOAD -->
                <div id="imageUploadContainer" class="hidden">
                    <div id="dropzoneColor" 
                        class="w-full border-2 border-dashed border-gray-300 rounded-md px-3 py-10 text-center cursor-pointer bg-white hover:bg-gray-50 transition"
                        style="max-height: 100px; overflow-y: auto;"
                    >
                        <p class="text-gray-500">Drag & drop an image here or click to browse</p>
                        <input type="file" name="image" id="colorImageInput" accept="image/*" class="hidden">
                        <img id="colorPreviewImage" class="mt-3 mx-auto max-h-40 hidden rounded-md" />
                    </div>
                </div>
            </div>

            <!-- Availability -->
            <div class="flex items-center gap-2">
                <input type="checkbox" id="colorAvailable" name="available" class="w-4 h-4 text-orange-500 rounded focus:ring-orange-400">
                <label for="colorAvailable" class="text-sm font-medium text-gray-700">Available for orders</label>
            </div>

            <!-- Buttons -->
            <div class="flex justify-end space-x-3 pt-2">
                <button type="button" id="closeColorModalBtn2" class="px-4 py-2 border rounded-md text-gray-700 hover:bg-gray-100">Cancel</button>
                <button type="submit" class="px-4 py-2 bg-black text-white rounded-md hover:bg-gray-800">Add Color</button>
            </div>
        </form>
    </div>
</div>

<!-- DELETE CONFIRMATION MODAL -->
<div 
    id="deleteModal_colors"
    class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50 hidden"
>
    <div class="bg-[#fdf5ef] rounded-xl shadow-lg p-6 w-full max-w-sm text-center relative">
        <button 
            id="closeDeleteModal_colors"
            class="absolute top-3 right-3 text-gray-500 hover:text-gray-800 text-xl font-bold">
            &times;
        </button>

        <h2 class="text-lg font-semibold mb-2">Confirm Deletion</h2>
        <p id="deleteMessageColors" class="text-sm text-gray-600 mb-5">
            Are you sure you want to delete this color?
        </p>

        <div class="flex justify-center gap-3">
            <button 
                id="cancelDeleteBtnColors"
                class="px-4 py-2 border rounded-md text-gray-700 hover:bg-gray-100">
                Cancel
            </button>
            <form id="deleteFormColors" method="POST" action="">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_color') }}">
                <button 
                    type="submit"
                    class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>

<!-- EDIT COLOR MODAL -->
<div id="modal_editColor" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl w-full max-w-lg p-6 relative">
        <!-- Header -->
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-bold">Edit Color</h2>
            <button id="closeEditColorModalBtn" class="text-gray-500 hover:text-gray-800">&times;</button>
        </div>

        <!-- Form -->
        <form id="editColorForm" method="POST" enctype="multipart/form-data">
            <div class="space-y-4">
                <!-- Color Name -->
                <div>
                    <label class="block text-gray-700 font-medium mb-1">Color Name</label>
                    <input type="text" id="editColorName" name="name"
                            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-orange-400 focus:outline-none">
                </div>

                <!-- Price -->
                <div>
                    <label class="block text-gray-700 font-medium mb-1">Price</label>
                    <input type="number" id="editColorPrice" name="price" step="0.01"
                            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-orange-400 focus:outline-none">
                </div>
                
                <!-- Appearance Type -->
                <input type="hidden" name="appearance_type" id="editAppearanceType" value="hex">

                <div class="flex gap-3 mb-3">
                    <button type="button" id="editSelectHexOption"
                        class="px-3 py-2 rounded-md border border-gray-300 text-sm font-medium bg-white hover:bg-gray-100">
                        Choose Hex Color
                    </button>
                    <button type="button" id="editSelectImageOption"
                        class="px-3 py-2 rounded-md border border-gray-300 text-sm font-medium bg-white hover:bg-gray-100">
                        Upload Image
                    </button>
                </div>

                <!-- HEX COLOR -->
                <div id="editHexPickerContainer" class="space-y-2">
                    <label class="block text-gray-700 font-medium mb-1">Select Hex Color</label>
                    <input type="color" id="editColorHex" name="colorHex"
                            class="w-full h-12 rounded-lg border border-gray-300 cursor-pointer">
                </div>

                <!-- IMAGE UPLOAD -->
                <div id="editImageUploadContainer" class="space-y-2 hidden">
                    <label class="block text-gray-700 font-medium mb-1">Upload Image</label>
                    <div id="editDropzoneColor" 
                        class="border-2 border-dashed border-gray-400 rounded-lg p-6 text-center cursor-pointer hover:bg-orange-50 transition"
                        style="max-height: 100px; overflow-y: auto;"
                    >
                        <p class="text-gray-600">Click or drag an image here to upload</p>
                        <input type="file" id="editColorImageInput" name="image" accept="image/*" class="hidden">
                        <img id="editColorPreviewImage" class="mt-4 w-full h-40 object-cover rounded-lg hidden" alt="Preview">
                    </div>
                </div>

                <!-- Availability -->
                <div class="flex items-center gap-2">
                    <input type="checkbox" id="editColorAvailable" name="available" class="w-4 h-4 text-orange-500 rounded focus:ring-orange-400">
                    <label for="colorAvailable" class="text-sm font-medium text-gray-700">Available for orders</label>
                </div>

            </div>

            <!-- Buttons -->
            <div class="mt-6 flex justify-end gap-3">
                <button type="button" id="cancelEditColorBtn"
                        class="px-4 py-2 rounded-lg border border-gray-300 hover:bg-gray-100 transition">
                    Cancel
                </button>
                <button type="submit"
                        class="px-4 py-2 rounded-lg text-white font-medium"
                        style="background-color: #1E1E18;">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>







